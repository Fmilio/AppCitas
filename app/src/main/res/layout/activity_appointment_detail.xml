<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con estado de la cita -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título y Estado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Detalle de Cita"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_dark" />

                    <TextView
                        android:id="@+id/tvAppointmentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/status_badge"
                        android:text="Confirmada"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/success"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />
                </LinearLayout>

                <!-- Fecha y Hora destacadas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/highlight_background"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/primary_blue"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAppointmentDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lunes, 1 de Septiembre 2025"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_dark" />

                        <TextView
                            android:id="@+id/tvAppointmentTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 AM - 10:30 AM"
                            android:textSize="14sp"
                            android:textColor="@color/primary_blue" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/primary_blue" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Información del Paciente -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Información del Paciente"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue" />

                    <ImageView
                        android:id="@+id/btnCallPatient"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_phone"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:color="@color/success"
                        android:padding="4dp" />
                </LinearLayout>

                <!-- Avatar y nombre -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Avatar circular -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="30dp"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/ivPatientAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@color/secondary_blue" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPatientName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carlos Mendoza"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_dark" />

                        <TextView
                            android:id="@+id/tvPatientId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: 12.345.678-9"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Información de contacto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Teléfono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_phone"
                            app:tint="@color/text_secondary"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvPatientPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+56 9 1234 5678"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_email"
                            app:tint="@color/text_secondary"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvPatientEmail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="carlos.mendoza@email.com"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Detalles de la Consulta -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles de la Consulta"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    android:layout_marginBottom="16dp" />

                <!-- Especialidad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_medical"
                        app:tint="@color/text_secondary"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Especialidad"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvSpecialty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medicina General"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/gray_dark" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Motivo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_notes"
                        app:tint="@color/text_secondary"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="2dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Motivo de consulta"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvConsultationReason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Control de rutina y revisión de exámenes de laboratorio"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Notas adicionales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_notes"
                        app:tint="@color/text_secondary"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="2dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notas adicionales"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvAdditionalNotes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paciente debe traer exámenes de sangre más recientes"
                            android:textSize="14sp"
                            android:textColor="@color/gray_dark"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botones de Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Primera fila de botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Editar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditAppointment"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Editar"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary_blue"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_edit"
                    app:iconSize="18dp"
                    style="@style/Widget.MaterialComponents.Button.Icon" />

                <!-- Cancelar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelAppointment"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Cancelar"
                    android:textSize="14sp"
                    android:backgroundTint="@color/danger"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_cancel"
                    app:iconSize="18dp"
                    style="@style/Widget.MaterialComponents.Button.Icon" />
            </LinearLayout>

            <!-- Segunda fila de botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Reagendar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRescheduleAppointment"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Reagendar"
                    android:textSize="14sp"
                    android:backgroundTint="@color/warning"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_schedule"
                    app:iconSize="18dp"
                    style="@style/Widget.MaterialComponents.Button.Icon" />

                <!-- Marcar Completada -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCompleteAppointment"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Completar"
                    android:textSize="14sp"
                    android:backgroundTint="@color/success"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_check"
                    app:iconSize="18dp"
                    style="@style/Widget.MaterialComponents.Button.Icon" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>