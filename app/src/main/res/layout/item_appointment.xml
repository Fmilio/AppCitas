<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Barra de color lateral -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/primary_blue"
            android:layout_marginEnd="16dp" />

        <!-- Contenido de la cita -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Hora -->
            <TextView
                android:id="@+id/tvAppointmentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 AM"
                android:textSize="14sp"
                android:textColor="@color/primary_blue"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Nombre del paciente -->
            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carlos Mendoza"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_dark"
                android:layout_marginBottom="2dp" />

            <!-- Tipo de consulta -->
            <TextView
                android:id="@+id/tvAppointmentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consulta General"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <!-- Estado -->
        <TextView
            android:id="@+id/tvAppointmentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/status_badge"
            android:text="Confirmada"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/success"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>