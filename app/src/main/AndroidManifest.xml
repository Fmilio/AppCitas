<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devst.appcitas">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Activity que se lanza al iniciar la app -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Dashboard despuÃ©s del login -->
        <activity
            android:name=".DashboardActivity"
            android:exported="false" />

        <!-- Nueva actividad para registrar citas -->
        <activity
            android:name=".ActivityNewAppointment"
            android:exported="false"
            android:label="@string/title_activity_new_appointment" />

        <!-- Activity que muestra la lista de citas -->
        <activity
            android:name=".AppointmentsActivity"
            android:exported="false" />

    </application>

</manifest>
